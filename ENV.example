# Common
APP_ENV=production
PORT=3030

# Telegram
BOT_TOKEN=123456:replace_me

# Mini app (optional)
MINI_APP_LINK=https://t.me/your_bot/your_app

# Webhook
# Base URL must include scheme and host (and optional port), without trailing slash
# Example (prod): https://api.example.com
# Example (staging with port): https://staging.example.com:8443
WEBHOOK_BASE_URL=https://your-domain.tld
# Path where Express receives Telegram updates; use a unique path per instance
WEBHOOK_PATH=/telegram/webhook/prod
# Optional, if you want Telegram to include a secret header
WEBHOOK_SECRET_TOKEN=
# Whether to drop pending updates when setting webhook (recommended true)
WEBHOOK_DROP_PENDING_UPDATES=true

